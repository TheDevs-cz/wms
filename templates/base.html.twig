<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% apply spaceless %}{% block title %}{% endblock %}{% endapply %} | WMS</title>

        {% block meta_viewport %}
            <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% endblock %}

        <meta name="turbo-prefetch" content="false">
        <meta name="turbo-refresh-method" content="morph">

        <meta name="description" content="{% apply spaceless %}{% block meta_description %}{% endblock %}{% endapply %}">
        <meta name="keywords" content="{% apply spaceless %}{% block meta_keywords %}{% endblock %}{% endapply %}">

        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="theme-color" content="#ffffff">

        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="theme-color" content="#ffffff">

        <link type="text/plain" rel="author" href="{{ asset('humans.txt') }}">

        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}

        {% block custom_styles %}{% endblock %}
    </head>
    <body class="{% block body_class %}{% endblock %}">

    {% block full_content %}
        <nav class="navbar navbar-expand-lg sticky-top bg-dark border-bottom border-body p-2 py-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('dashboard') }}"><i class="bi bi-house-door"></i> Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="goodsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box-seam"></i> Operace se zbožím
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="goodsDropdown">
                                <li><a class="dropdown-item" href="{{ path('scan_info') }}">Skenování zboží</a></li>
                                <li><a class="dropdown-item" href="{{ path('scan_info') }}">Naskladnění zboží</a></li>
                                <li><a class="dropdown-item" href="{{ path('scan_info') }}">Vyskladnění zboží</a></li>
                            </ul>
                        </li>

                        <!-- Orders Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-card-list"></i> Objednávky
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                                <li><a class="dropdown-item" href="#">Vytvoření objednávky</a></li>
                                <li><a class="dropdown-item" href="#">Kompletace objednávky</a></li>
                                <li><a class="dropdown-item" href="#">Upravit objednávku</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-lg-flex">
                        <ul class="order-2 navbar-nav">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i> Nastavení
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('warehouses') }}">Sklady</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('locations') }}">Lokace</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('positions') }}">Pozice</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('products') }}">Produkty</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('users') }}">Uživatelé</a>
                                        </li>
                                    </ul>
                                </li>
                            {% endif %}

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="myAccountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Můj účet
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="myAccountDropdown">
                                    <li><a class="dropdown-item" href="{{ path('user_profile') }}">Nastavení účtu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('logout') }}"><i class="bi bi-box-arrow-right"></i> Odhlásit se</a></li>
                                </ul>
                            </li>
                        </ul>

                        <form class="order-1 me-lg-3 mt-2 mt-lg-0" role="search">
                            <input class="form-control me-2" type="search" placeholder="Hledej..." aria-label="Search">
                        </form>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            {{ include('_flashes.html.twig') }}

            {% block content %}{% endblock %}
        </div>
    {% endblock %}

    </body>
</html>
