{% extends 'base.html.twig' %}

{% block title %}Objednávky{% endblock %}

{% block content %}
    <h1>Objednávky</h1>

    <div class="table-responsive shadow-lg">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
            <tr>
                <th scope="col">Číslo</th>
                <th scope="col">Stav</th>
                <th scope="col">Datum</th>
                <th scope="col">Uživatel</th>
                <th scope="col">Dopravce</th>
                <th scope="col">Doručovací adresa</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>
                        <a href="{{ path('order_detail', {'id': order.id}) }}">
                            {{ order.number }}
                        </a>
                    </td>
                    <td>
                        <span class="badge rounded-pill {{ order.status.value == 'open' ? 'text-bg-warning' : 'text-bg-info' }}">
                            {{ order.status.value }}
                        </span>
                    </td>
                    <td>
                        {{ order.orderedAt|date('d.m.Y H:i') }}
                    </td>
                    <td>
                        {{ order.user.email }}
                    </td>
                    <td>
                        {{ order.carrier }}
                    </td>
                    <td>
                        {{ order.email }} {{ order.phone }}{% if order.email or order.phone %}<br>{% endif %}
                        {{ order.deliveryAddress.name }}<br>
                        {{ order.deliveryAddress.street }}<br>
                        {{ order.deliveryAddress.city }} {{ order.deliveryAddress.postalCode }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
