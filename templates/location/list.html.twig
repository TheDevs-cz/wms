{% extends 'base.html.twig' %}

{% block title %}Lokace{% endblock %}

{% block content %}
    <h1>Lokace</h1>

    <p>
        <a class="btn btn-outline-primary" href="{{ path('location_add') }}">
            <i class="bi bi-plus-lg"></i> Přidat lokaci
        </a>

        <a class="btn btn-outline-primary" href="{{ path('location_generate') }}">
            <i class="bi bi-arrow-repeat"></i> Generovat lokace
        </a>
    </p>

    <div class="table-responsive shadow-lg">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Název</th>
                    <th scope="col">Sklad</th>
                    <th scope="col">Stav</th>
                    <th scope="col" class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                {% for location in locations %}
                    <tr>
                        <td>
                            <a href="{{ path('location_info', {'id': location.id}) }}">
                                {{ location.name }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('warehouse_info', {'id': location.warehouse.id}) }}">
                                {{ location.warehouse.title }}
                            </a>
                        </td>
                        <td>
                            {% if not location.deactivatedAt %}
                                <span class="badge bg-success">Aktivní</span>
                            {% else %}
                                <span class="badge bg-warning">Neaktivní</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-primary me-1 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-printer"></i> Štítky
                                </button>
                                <ul class="dropdown-menu">
                                    {% for labelType in labelTypes %}
                                        <li><a data-turbo="false" class="dropdown-item" href="{{ path('location_qr_batch', {'id': location.id, 'labelType': labelType.value}) }}">Hromadný tisk {{ labelType.value }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i> Editovat
                            </a>

                            {% if not location.deactivatedAt %}
                                <a href="{{ path('location_deactivate', {'id': location.id}) }}" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-slash-circle"></i> Deaktivovat
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
