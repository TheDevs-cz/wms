{% extends 'base.html.twig' %}

{% block title %}Pozice{% endblock %}

{% block content %}
    <h1>Pozice</h1>

    <p>
        <a class="btn btn-outline-primary" href="{{ path('position_add') }}">
            <i class="bi bi-plus-lg"></i> Přidat pozici
        </a>
    </p>

    <div class="table-responsive shadow-lg">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Název</th>
                    <th scope="col">Lokace</th>
                    <th scope="col">Sklad</th>
                    <th scope="col">Stav</th>
                    <th scope="col" class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                {% for position in positions %}
                    <tr>
                        <td>{{ position.name }}</td>
                        <td>{{ position.location.name }}</td>
                        <td>{{ position.location.warehouse.title }}</td>
                        <td>
                            {% if not position.deactivatedAt %}
                                <span class="badge bg-success">Aktivní</span>
                            {% else %}
                                <span class="badge bg-warning">Neaktivní</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a href="{{ path('position_edit', {'id': position.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i> Editovat
                            </a>

                            {% if not position.deactivatedAt %}
                                <a href="{{ path('position_deactivate', {'id': position.id}) }}" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-slash-circle"></i> Deaktivovat
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
